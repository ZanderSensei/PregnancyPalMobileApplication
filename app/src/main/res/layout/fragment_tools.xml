<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToolsFragment">

    <!-- Habit Tracker Tool -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewHabitTracker"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="6dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageViewHabitTracker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/habit_tracker_icon"
            android:scaleType="centerInside" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewHabitTracker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habit Tracker"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cardViewHabitTracker"
        app:layout_constraintStart_toStartOf="@id/cardViewHabitTracker"
        app:layout_constraintEnd_toEndOf="@id/cardViewHabitTracker"
        android:layout_marginTop="8dp" />



    <!-- Mood Tracker Tool -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewMoodTracker"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="6dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@id/textViewHabitTracker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageViewMoodTracker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/mood_tracker_icon"
            android:scaleType="centerInside" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewMoodTracker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mood Tracker"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cardViewMoodTracker"
        app:layout_constraintStart_toStartOf="@id/cardViewMoodTracker"
        app:layout_constraintEnd_toEndOf="@id/cardViewMoodTracker"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
